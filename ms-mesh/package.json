    "esbuild": "^0.19.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@graphql-mesh/graphql": "^0.95.7",
    "@graphql-mesh/supergraph": "^0.0.7",
    "aws-xray-sdk": "^3.5.2",
    "graphql": "^16.8.1"
  }
}
